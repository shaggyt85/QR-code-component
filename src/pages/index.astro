---
import Layout from "../layouts/Layout.astro";
import qr from "../../public/images/image-qr-code.png"
---

<Layout title="Frontend Mentor | QR code component">
  <body>
    <section>
      <img src="/images/image-qr-code.png" alt="qr" />
      <h2>Improve your front-end skills by building projects</h2>
      <p>
        Scan the QR code to visit Frontend Mentor and take your coding skills to
        the next level
      </p>
    </section>
  </body>
</Layout>

<style>
  body {
    margin: 0;
	display: flex;
	max-width: 100vw;
	max-height: max-content;
	height: 100vh;
	justify-content: center;
	align-items: center;
  }
  section {
    display: flex;
    border-radius: 20px;
	padding: 1.1rem;
    margin: 2rem;
	width: 300px;
    background-color: var(--main-color-White);
	align-items: center;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: center;
  }
  img{
	display: block;
	border-radius: 0.9rem;
	height: 17rem;
	width: 20rem;
  }
  h2{
	text-align: center;
	padding: 0 1.5rem;
	color: var(--second-color-Dark-blue)
  }
  p{
	text-align: center;
	margin: 0;
	padding: 0 1.2rem;
	color: var(--main-color-Grayish-blue);
  }

</style>
